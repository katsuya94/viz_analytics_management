<% content_for :head do %>

<style>
	.ajax .progress{
		height: 30px;
	}
	h3 {
		margin: 0;
		line-height: 30px;
		vertical-align: middle;
	}
</style>

<script>
$(function() {
	var percentArray = ['31','34','36','35','15','9','6'];
	var actualValueArray = ['8','10','1'];
	var device = ['30','33','37']
	var deviceDict = {};
	//$.inArray(value, array)>=0
	var value=0;
	var originalValue=0;
	var valueString = '';
	var percentValueString = '';
	var metricNumber='';
	var x = 0;
	$('.ajax').each(function(i, el) {
		$.getJSON(sprintf('/metrics/metric/%s', $(el).attr('metric')), function(data) {
			metricNumber =  $(el).attr('metric');
			originalValue = data.value.toFixed(0);
			value = data.value.toFixed(0);
			valueString = value.toString();
			percentValueString = valueString+'%'
			if($.inArray(metricNumber, percentArray)>=0)
			{
				valueString = valueString + '%';
				value = value/100;
			}
			else if($.inArray(metricNumber,device)>=0){
				console.log('logged metric number'+value.toString());
				deviceDict[metricNumber.toString()] = value;
				if(metricNumber=='37'){
					$('#devicesRow').find('div.progress div.progress-bar-success').width(deviceDict['30']+'%');
					$('#devicesRow').find('div.progress div.progress-bar-success').text(deviceDict['30']+'%');
					$('#devicesRow').find('div.progress div.progress-bar-warning').width(deviceDict['33']+'%');
					$('#devicesRow').find('div.progress div.progress-bar-warning').text(deviceDict['33']+'%');
					$('#devicesRow').find('div.progress div.progress-bar-danger').width(deviceDict['37']+'%');
					$('#devicesRow').find('div.progress div.progress-bar-danger').text(deviceDict['37']+'%');

					
				$('.mypopover').popover({ trigger: "hover focus" });
				}
			}
			if($.inArray(metricNumber.toString(), percentArray)>=0){
				$(el).find('div.progress div').width(percentValueString);
				$(el).find('div.progress div').text(percentValueString);
			}
				//$(el).parent().find('span.ajaxtext').text(value);
			else{
				$(el).text(value);
			}
		}).fail(function() {
			$(el).text('Not Found');
		});
	});
});

</script>

<% end %>