			</div>	
		</div>
		<p><a href="#" class="btn btn-primary btn-lg">More</a></p>
	</div>
</div>

<% content_for :head do %>

<style>
	.progress {
		height: 50px;
		line-height: 50px;
		vertical-align: middle;
		text-align: center;
		font-size: 18pt;
	}
	h3 {
		margin: 0;
		line-height: 50px;
		vertical-align: middle;
	}
	.progress div {
		line-height: 50px;
		vertical-align: middle;
		font-size: 18pt;
	}
	.progress-bar-success {
		background-color: #5CB8B8;
	}
	.progress-bar-danger {
		background-color: #5C5CB8;
	}
	.progress-bar-warning {
		background-color: #B85CB8;
	}
</style>

<script>
$(function() {
	$('.ajax').each(function(i, el) {
		$.getJSON(sprintf('/metrics/metric/%s', $(el).attr('metric')), function(data) {
			value = $(el).hasClass('smallnum') ? data.value.toFixed(2) : Math.floor(data.value);
			if($(el).hasClass('text')) {
				$(el).text(value + ($(el).hasClass('percent') ? '%' : ''));
			}
			if($(el).hasClass('bar')) {
				$(el).find('div.progress div').width(data.value + '%');
				if(data.value > 15)
					$(el).find('div.progress div').text(value + '%');
				else
					$(el).find('div.progress').append(value + '%');
			}
			if($(el).hasClass('stackbar')) {
				$(el).width(data.value + '%')
				$(el).text($(el).attr('label')+': '+Math.floor(data.value)+'%')
			}
		}).fail(function() {
			if($(el).hasClass('text'))
				$(el).text('Not Found');
			if($(el).hasClass('bar'))
				$(el).find('div.progress').text('Not Found');
		});
	});
	
});
</script>

<% end %>